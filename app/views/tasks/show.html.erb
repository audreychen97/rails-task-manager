<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<% if @task.completed %>
<p><input type="checkbox" checked>This task is completed</p>
<% else %>
<p><input type="checkbox">This task is not completed yet</p>
<% end %>

<p><button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i><%= link_to "Edit this task", edit_tasks_path(@task), :class => "edit-btn-text" %></button></p>

<p><button type="button" class="btn btn-primary"><i class="fas fa-undo-alt"></i><%= link_to "Back to list", tasks_path, :class => "btn-text" %></button></p>
